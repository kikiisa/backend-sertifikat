<!DOCTYPE html>
<html>
  <% include templates/header %>
  <body style="background-color: lightgray;">
    <% include templates/navbar %>
    <div class="container mt-4 mb-4">
      <div class="row d-flex justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
                <h3>New Sertifikat</h3>
                <hr>
                <% if(messages.alert){  %>
                  <div class="alert alert-info">
                    <%- messages.alert %>
                  </div>
                <%  } %>
                <% if(messages.error_0){ %>
                  <div class="alert alert-danger">
                    <%- messages.error_0 %>
                    <%- messages.error_1 %>
                    <%- messages.error_2 %>
                    <%- messages.error_3 %>
                  </div>
                <%  } %>
                <form method="POST" action="/store-sertifikat">
                    <div>    
                      <div class="form-group">
                        <label for="">Title Sertifikat</label>
                        <input type="text" name="title" class="form-control" placeholder="Title Sertifikat">
                      
                      </div>
                      <div class="form-group">
                        <label for="">Theme Event</label>
                        <input type="text" name="theme" placeholder="Theme Event" class="form-control">
                      
                      </div>
                      <div class="form-group">
                        <label for="">Leader Company</label>
                        <input type="text" name="leader" placeholder="Leader Company" class="form-control">
                      
                      </div>
                      <div class="form-group">
                        <label for="">Co-Leader Company</label>
                        <input type="text" name="co" placeholder="Co-Leader Company" class="form-control">
                      
                      </div>
                      <button type="submit" class="btn btn-dark"><i class="fa fa-floppy-o"></i>  Saved</button>
                      <button type="reset" class="btn btn-dark"><i class="fa fa-refresh"></i>  Reset</button>
                    </div>
                </form>
            </div>
          </div>
        </div>

      </div>
    </div>
    <% include templates/script  %>
  </body>
</html>
